---
const {optionsList, title} = Astro.props;

const currentPath = Astro.url.pathname;

---
<ul class="drop-menu mt-2 space-y-1 absolute hidden
        bg-white rounded-xl top-9">
        {optionsList.map((item:any) => (
            <li class="flex flex-col items-start">
                <a 
                    href={`${import.meta.env.BASE_URL}${title.toLowerCase()}/${item.path}`} 
                    class:list={[`block text-sm text-ocreNeutral-120 hover:text-ocre-110 px-4 py-2`,
                        {"text-ocre-110": currentPath.includes(title.toLowerCase())},
                    ]}
                >
                    {item.title}
                </a>
            </li>
        ))}
</ul>

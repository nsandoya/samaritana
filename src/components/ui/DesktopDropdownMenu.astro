---
const {optionsList, title} = Astro.props;

const currentPath = Astro.url.pathname;

---
<ul class="drop-menu min-w-[120px] w-[150px] space-y-1 absolute
        bg-white rounded-xl top-1">
        {optionsList.map((item:any) => (
            <li class="flex flex-col items-start justify-center">
                <a 
                    href={`${import.meta.env.BASE_URL}${title.toLowerCase()}/${item.slug}`} 
                    class:list={[`block w-full text-sm text-ocreNeutral-120 text-left hover:text-ocre-110 px-4 py-2`,
                        {"text-ocre-110": currentPath.includes(title.toLowerCase())},
                    ]}
                >
                    {item.title}
                </a>
            </li>
        ))}
</ul>

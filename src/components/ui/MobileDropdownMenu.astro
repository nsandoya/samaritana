---
const {optionsList, title} = Astro.props;

const currentPath = Astro.url.pathname;

---
<ul class="drop-menu mt-2 space-y-1 bg-ocre-30 rounded-xl transform transition-transform duration-400">
    {optionsList.map((item:any) => (
        <li>
            <a 
                href={`${import.meta.env.BASE_URL}${title.toLowerCase()}/${item.slug}`} 
                class:list={[`block text-lg text-ocreNeutral-120 text-center hover:text-ocre-110 px-4 py-1`,
                    {"text-ocre-110": currentPath.includes(title.toLowerCase())},
                ]} 
            >
                {item.title}
            </a>
        </li>
    ))}
</ul>

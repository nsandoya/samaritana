---
import type { About } from "@/interfaces/AboutSection";
import PrimaryButton from "./shared/PrimaryButton.astro";

const {title, subtitle, paragraph, button, image, direction="flex-row"} = Astro.props as About
---
<section class=`flex ${direction} w-fit mx-auto h-[100vh] justify-center items-center px-[4.5rem] ` >
    <div class:list={[
        "grid grid-cols-1 gap-6 w-[40%]",
        {"ml-[6.5rem]": direction === "flex-row-reverse"},    
        {"mr-6": direction === "flex-row"}    
    ]}>
        <div class="flex flex-col">
            <h4>{subtitle}</h4>
            <h2>{title}</h2>
        </div>
        <p class="w-[85%]">{paragraph}</p>
        <PrimaryButton title={button} />
    </div>
    <div class=`${image} h-[85vh] w-[40%]`></div>

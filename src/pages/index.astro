---
import MainLayout from '../layouts/MainLayout.astro';
import SimpleNavbar from '@/components/ui/SimpleNavbar.astro'
import AboutSection from '@/components/AboutSection.astro';

import '../styles/globals.css';
import type { About } from '@/interfaces/AboutSection';
import HeroSection from '@/components/HeroSection.astro';
import ReviewsMainSection from '@/components/ReviewsMainSection.astro';
import type { ReviewCard } from '@/interfaces/ReviewCard';

// Tendré que pasar toda esta info a un JSON
const aboutMe: About = {
  subtitle: "Sobre mi",
  title: "Fátima Martínez",
  paragraph: "Tras un largo viaje de relaciones fallidas, pérdidas y desarraigo, tuve  un encuentro cara a cara con Jesús: <br> Recibí el perdón que necesitaba, una  familia, ¡y una nueva vida! Desde entonces, escribo sobre mi fe y mis experiencias para personas que, como yo, anhelan encontrar  esperanza, sanidad y propósito para sus vidas",
  button: "Conectemos",
  image: "about-img",
  color: true
}

const redemptionJourney: About = {
  subtitle: "Empieza ahora tu",
  title: "Viaje de Redención",
  paragraph: "Te invito a conocer mi historia, ¡tengo mucho que compartir contigo! Si estás en Ecuador y eres amante de los libros, puedes encontrar mi  obra en Librerías CLC. Si te encuentras en otro país, te animo a  adquirir mi ebook en nuestro espacio de Amazon Kindle",
  button: "Conoce mi obra",
  image: "redemption-img",
  direction: "flex-row-reverse"
}

const reviews:ReviewCard[] = [
  { 
    name: "Lila Suárez",
    country: "Ecuador",
    review: "Leí esta historia con mucho interés (confieso que no pude evitar llorar un poco). La recomiendo a todos los que buscan una lectura inspiradora y conmovedora",
    image: "lila-suarez.jpg"
  },
  { 
    name: "Ariel Cortéz",
    country: "Ecuador",
    review: "Samaritana es una historia muy emotiva y conmovedora: te lleva a reflexionar sobre tu propia vida. ¡Sus ilustraciones son hermosas! Te transportan a otro mundo",
    image: "ariel-cortez.png"
  },
  { 
    name: "Paula García",
    country: "Ecuador",
    review: "Me gustó mucho seguir el viaje de la protagonista hacia el nuevo comienzo que ella creía imposible. Este libro es también una maravilla para los amantes del arte gráfico",
    image: "paula-garcia.jpg"
  },
]

const volunteering: About = {
  title: "Labor Voluntaria",
  paragraph: "Hace unos años conocí a un maravilloso grupo de personas dedicadas a contribuir al bienestar de otros. Ellos me tendieron la mano en uno de mis momentos más difíciles, y hoy busco activamente nuevas formas de servir y ayudar a la comunidad en agradecimiento. Junto a Lluvia de Gracia y Sordos y Mudos, nos esforzamos día a día para hacer de este mundo un lugar mejor",
  image: "volunteering-img",
  button: "Conoce más",
}

---
<MainLayout>
  <!-- Navbar -->
  <SimpleNavbar/>
  <!-- Hero section -->
  <HeroSection></HeroSection>
  <!-- About me -->
  <AboutSection {...aboutMe}></AboutSection>
  <!-- Redemption journey (Let's see her books) -->
  <AboutSection {...redemptionJourney}></AboutSection>
  <!-- Reviews main section -->
  <ReviewsMainSection reviews={reviews}/>
  <!-- Samaritana and Volunteering organizations -->
   <AboutSection {...volunteering}></AboutSection>
</MainLayout>


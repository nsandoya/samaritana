---
import MainLayout from "./MainLayout.astro";
import ContactSection from "@/components/ContactSection.astro";

const {title} = Astro.props
const name = title
---
<MainLayout {name}>
    <slot></slot>
    <!-- Simple review form -->
    <div class="flex flex-col w-[80%] mx-auto my-10">
        <h4>¿Has leído {title}?</h4>
        <h2 class="h2-connect leading-[3rem]">¿Te gustaría apoyar esta causa?</h2>
        <div class="flex-flex-col w-full my-6">
            
        </div>
    </div>

    <ContactSection></ContactSection>
</MainLayout>
